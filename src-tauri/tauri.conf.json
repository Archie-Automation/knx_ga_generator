{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "KNX GA Generator",
  "version": "0.1.4",
  "identifier": "com.knx.ga-generator",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "KNX GA Generator",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://*.supabase.co https://*.supabase.in https://ajdaacuzcqhuzfmaibpq.supabase.co https://github.com https://github.com/* https://*.github.com https://*.githubusercontent.com ws://localhost:5173 ws://127.0.0.1:5173; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; img-src 'self' data: blob: https:; font-src 'self' https://fonts.gstatic.com data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDg0QzREQkQ4N0UwMTUxQjEKUldTeFVRRisyTnZFaEY1VjFzZHRua1BQUGgvQ3lxdGxxQ09yWGJuQUdva3FmNktoaW0zZktvaUgK",
      "endpoints": [
        "https://github.com/Archie-Automation/knx_ga_generator/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "basicUi"
      }
    }
  }
}
